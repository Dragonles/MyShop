<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/public_background"
    tools:context="com.shop.myshop.myshop.SettleAccountsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/public_toolbar_color" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:background="@null"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/ib_settle_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结算"
                android:textSize="25sp"
                android:textColor="#FFF"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="#FFF">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ib_settle_address_go"
                        android:src="@drawable/go"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/iconfont_location"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/imageView2" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/imageView2"
                        android:id="@+id/relativeLayout"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/ib_settle_address_go">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收货人："
                            android:textColor="@color/public_font_color"
                            android:id="@+id/textView3"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="小苍"
                            android:textColor="@color/public_font_color"
                            android:id="@+id/tv_settle_username"
                            android:layout_alignBottom="@+id/textView3"
                            android:layout_toRightOf="@+id/textView3"
                            android:layout_toEndOf="@+id/textView3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15512346600"
                            android:textColor="@color/public_font_color"
                            android:id="@+id/tv_settle_userphone"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收货地址："
                            android:textColor="@color/public_font_color"
                            android:id="@+id/textView6"
                            android:layout_below="@+id/textView3"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/public_font_color"
                            android:text="山东省临沂市罗庄区山东交通技师学院"
                            android:id="@+id/tv_settle_useraddress"
                            android:layout_below="@+id/tv_settle_username"
                            android:layout_toRightOf="@+id/textView6"
                            android:layout_toEndOf="@+id/textView6" />

                    </RelativeLayout>


                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="#FFF">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/iconfont_shop"
                            android:layout_marginTop="10dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:id="@+id/imageView3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="小苍专卖店"
                            android:textSize="15sp"
                            android:layout_marginTop="1dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/public_font_color"
                            android:layout_alignTop="@+id/imageView3"
                            android:layout_toRightOf="@+id/imageView3"
                            android:layout_toEndOf="@+id/imageView3"
                            android:id="@+id/tv_settle_shopname" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:id="@+id/imageView4"
                            android:layout_below="@+id/imageView3"
                            android:layout_alignLeft="@+id/imageView3"
                            android:layout_alignStart="@+id/imageView3"
                            android:src="@drawable/iconfont_picfill" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="USB有线鼠标 笔记本台式电脑白色"
                            android:textColor="#333"
                            android:textSize="15sp"
                            android:layout_marginTop="15dp"
                            android:id="@+id/tv_settle_goodsname"
                            android:layout_alignTop="@+id/imageView4"
                            android:layout_toRightOf="@+id/imageView4"
                            android:layout_toEndOf="@+id/imageView4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="套餐类型："
                            android:textSize="12sp"
                            android:textColor="@color/public_font_color"
                            android:id="@+id/textView9"
                            android:layout_below="@+id/tv_settle_goodsname"
                            android:layout_toRightOf="@+id/imageView4"
                            android:layout_toEndOf="@+id/imageView4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="官方标配，颜色分类：白色【送鼠标垫+30天包退】"
                            android:textColor="@color/public_font_color"
                            android:textSize="12sp"
                            android:id="@+id/tv_settle_meal"
                            android:layout_below="@+id/tv_settle_goodsname"
                            android:layout_toRightOf="@+id/textView9"
                            android:layout_toEndOf="@+id/textView9" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥ 34.50"
                            android:textColor="@color/style_color"
                            android:id="@+id/tv_settle_goodsmoney"
                            android:layout_marginBottom="10dp"
                            android:layout_alignBottom="@+id/imageView4"
                            android:layout_toRightOf="@+id/imageView4"
                            android:layout_toEndOf="@+id/imageView4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="x1"
                            android:id="@+id/tv_settle_goodsmuch"
                            android:layout_alignTop="@+id/tv_settle_goodsmoney"
                            android:layout_alignRight="@+id/tv_settle_meal"
                            android:layout_alignEnd="@+id/tv_settle_meal" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/public_line_color"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="配送方式"
                            android:textColor="@color/public_font_color"
                            android:textSize="12sp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />


                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/go"
                            android:background="@null"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:id="@+id/ib_settle_delivery_go" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="快递免邮"
                            android:textColor="@color/public_font_color"
                            android:textSize="12sp"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/ib_settle_delivery_go"
                            android:layout_toStartOf="@+id/ib_settle_delivery_go" />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/public_line_color"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="运费险"
                            android:textColor="@color/public_font_color"
                            android:textSize="12sp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />


                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/go"
                            android:background="@null"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:id="@+id/ib_settle_freight_go" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/public_line_color"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="发票抬头："
                            android:textColor="@color/public_font_color"
                            android:textSize="12sp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:id="@+id/textView13" />


                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/go"
                            android:background="@null"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:id="@+id/ib_settle_invoice_go" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="小苍"
                            android:textColor="@color/public_font_color"
                            android:textSize="12sp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/textView13"
                            android:layout_toEndOf="@+id/textView13"
                            android:id="@+id/tv_settle_invoice" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/public_line_color"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="买家留言："
                            android:textColor="@color/public_font_color"
                            android:textSize="12sp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:id="@+id/textView14" />


                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/go"
                            android:background="@null"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:id="@+id/ib_settle_message_go" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="可填写要求"
                            android:textColor="@color/public_font_color"
                            android:textSize="12sp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/textView14"
                            android:layout_toEndOf="@+id/textView14"
                            android:id="@+id/tv_settle_message" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/public_line_color"/>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">


                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="￥34.50"
                            android:textColor="@color/style_color"
                            android:id="@+id/tv_settle_totalmoney"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="合计："
                            android:textColor="@color/public_font_color"
                            android:textSize="15sp"
                            android:id="@+id/textView"
                            android:layout_alignTop="@+id/tv_settle_totalmoney"
                            android:layout_toLeftOf="@+id/tv_settle_totalmoney"
                            android:layout_toStartOf="@+id/tv_settle_totalmoney" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="共1件商品"
                            android:textColor="@color/public_font_color"
                            android:textSize="15sp"
                            android:layout_marginRight="10dp"
                            android:id="@+id/tv_settle_totalmuch"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/textView"
                            android:layout_toStartOf="@+id/textView" />
                    </RelativeLayout>

                </LinearLayout>
                
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#FFF"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="匿名购买"
                        android:textSize="12sp"
                        android:textColor="@color/public_font_color"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#FFF"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="确定"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:id="@+id/btn_settle_submit"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@color/style_color"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="￥34.50"
            android:textColor="@color/style_color"
            android:id="@+id/tv_settle_bottom_totalmoney"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btn_settle_submit"
            android:layout_toStartOf="@+id/btn_settle_submit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计："
            android:textColor="@color/public_font_color"
            android:textSize="15sp"
            android:layout_alignTop="@+id/tv_settle_bottom_totalmoney"
            android:layout_toLeftOf="@+id/tv_settle_bottom_totalmoney"
            android:layout_toStartOf="@+id/tv_settle_bottom_totalmoney" />

    </RelativeLayout>


</RelativeLayout>
