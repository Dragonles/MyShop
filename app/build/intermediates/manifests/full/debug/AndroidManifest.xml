<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shop.myshop.myshop"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@drawable/mai_logp"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.shop.myshop.myshop.ShanActivity"
            android:label="@string/app_name"
            android:theme="@style/MyFullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.shop.myshop.myshop.MainActivity"
            android:label="@string/title_activity_shan"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.shop.myshop.myshop.LeadActivity"
            android:label="@string/title_activity_lead"
            android:theme="@style/MyFullscreen" />
        <activity
            android:name="com.shop.myshop.myshop.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.shop.myshop.myshop.RegistActivity"
            android:label="@string/title_activity_regist"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.shop.myshop.myshop.AddressActivtiy"
            android:label="@string/title_activity_address_activtiy"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.shop.myshop.myshop.CareActivity"
            android:label="@string/title_activity_care"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.shop.myshop.myshop.ShopsInfoActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>